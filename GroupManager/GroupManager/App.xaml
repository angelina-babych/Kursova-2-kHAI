<Application x:Class="GroupManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GroupManager"
             xmlns:models="clr-namespace:GroupManager.Models" 
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:MainBootsrapper x:Key="bootstrapper"></local:MainBootsrapper>
                </ResourceDictionary>
                <ResourceDictionary>
                    <models:IndexConverter x:Key="indexConverter"></models:IndexConverter>
                </ResourceDictionary>
                <ResourceDictionary>
                    <models:ListViewIndexConverter x:Key="listViewIndexConverter"></models:ListViewIndexConverter>
                </ResourceDictionary>
                <ResourceDictionary>
                    <models:WidthConverter x:Key="widthConverter"></models:WidthConverter>
                </ResourceDictionary>
                <ResourceDictionary Source="/Resources/Themes/DefaultTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Resources/Themes/Styles/Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
